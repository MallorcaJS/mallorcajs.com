extends layout

block wrap
    block header
      header.main
          figure
            a(href='/')
              img(src='/img/logo.png')
            p.description People doing stuff with Javascript

          ul.gallery-separator
            each i in [1, 2, 3, 4]
              each member in members
                if member.photo
                  li
                    img(src='#{member.photo.thumb_link}', title='#{member.name}')

    block content
      section.javascripters
          p.members
              a(href='/members') #{members.length} Javascripters
              p.members
                  a.button.join-us(href='//meetup.com/mallorcajs', target='_blank') Join us!
        script(async, src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
        ins(
            class="adsbygoogle",
            style="display:inline-block;width:728px;height:90px",
            data-ad-client="ca-pub-1377977444902808",
            data-ad-slot="8426457515")
        script.
            (adsbygoogle = window.adsbygoogle || []).push({})
      section.events
          h2 Are you going to lose the opportunity?
          each event in [events[0], events[1], events[2]]
            if event
              article.slot
                a(href='#{event.event_url}', target='_blank')
                  h3.truncate(title='#{event.name}') #{event.name}
                  strong.bubble #{event.yes_rsvp_count} going
                  div.scroll!= event.description
            else
              div.slot.free
                h3 It is free
                strong This slot could be yours!
                p
                  small= 'Submit your talk now and show us your knowledge, just contact us by '
                    a(href='mailto:info@mallorcajs.com') email
                    span= ' or '
                    a(href='twitter.com/mallorcajs', target='_blank') twitter
                p
                  small= 'This list is managed by '
                    a(href='//meetup.com/mallorcajs', target='_blank') meetup event list

    block footer
      footer
          div.section
            h3 Contact us!
            ul
              li= 'Follow us in '
                a(href='//twitter.com/mallorcajs', target='_blank') twitter
              li= 'Be part of our community in '
                a(href='//meetup.com/mallorcajs', target='_blank') meetup
              li= 'Take a look at out code in '
                a(href='//github.com/mallorcajs', target='_blank') github
              li= 'See our presentations in '
                a(href='//slides.com/mallorcajs', target='_blank') slid.es
          div.section
            h3 Our team
            p= 'MallorcaJS is organized by '
                a(href='//twitter.com/aganglada', target='_blank') Alejandro Garcia
                span= ' and '
                a(href='//twitter.com/kevohagan', target='_blank') Kevin O'Hagan
          div.section
          small MallorcaJS  - 2014




